<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registe_step1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tiago.bhsportestabelecimento.RegisterStep1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Nome Fantasia"
        android:id="@+id/txtNomeFantasia"
        android:maxLength="60"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Razão Social"
        android:id="@+id/txtRazaoSocial"
        android:maxLength="60"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="*CNPJ"
        android:id="@+id/txtCNPJ"
        android:maxLength="14"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Responsável"
        android:id="@+id/txtResponsavel"
        android:maxLength="30"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*E-mail"
        android:id="@+id/txtEmail"
        android:inputType="textEmailAddress"
        android:maxLength="30"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Fone"
        android:id="@+id/txtFone"
        android:inputType="phone"
        android:maxLength="20"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*CEP"
        android:id="@+id/txtCEP"
        android:maxLength="10"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Cidade"
        android:id="@+id/txtCidade"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Bairro"
        android:id="@+id/txtBairro"
        android:maxLength="25"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="*Endereço"
        android:id="@+id/txtEndereco"
        android:maxLength="50"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero"
        android:id="@+id/txtNumero"
        android:inputType="number"
        android:maxLength="5"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complemento"
        android:id="@+id/txtComplemento"
        android:maxLength="40"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contato"
        android:id="@+id/txtContato"
        android:maxLength="30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Próximo"
            android:onClick="btnRegisterStep1"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</LinearLayout>
</ScrollView>